<Window x:Class="BNKaraoke.DJ.Views.MiniSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="API Settings" Height="200" Width="300" Background="#1E3A5F" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="API Base URL" FontSize="16" Foreground="White" Margin="0,0,0,10"/>
        <TextBox x:Name="BaseUrlTextBox" Grid.Row="1" Width="250" Height="30" FontSize="14" Margin="0,0,0,10"
                 Text="http://localhost:7290"/>
        <Button Content="Save" Grid.Row="2" Width="100" Height="40" Background="#3B82F6" Foreground="White" FontWeight="Bold"
                Click="SaveButton_Click"/>
    </Grid>
</Window>