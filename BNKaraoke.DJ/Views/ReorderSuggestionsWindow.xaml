<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="BNKaraoke.DJ.Views.ReorderSuggestionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reorder Suggestions" Height="400" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListView ItemsSource="{Binding}" Margin="0,0,0,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Singer" DisplayMemberBinding="{Binding SingerName}"/>
                    <GridViewColumn Header="Current Position" DisplayMemberBinding="{Binding CurrentPosition}"/>
                    <GridViewColumn Header="Suggested Position" DisplayMemberBinding="{Binding SuggestedPosition}"/>
                    <GridViewColumn Header="Reason" DisplayMemberBinding="{Binding Reason}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Approve" IsDefault="True" Width="80" Height="30" Margin="5" Click="Approve_Click"/>
            <Button Content="Cancel" IsCancel="True" Width="80" Height="30" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
