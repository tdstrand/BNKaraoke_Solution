<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:BNKaraoke.DJ.Controls">
    <Style TargetType="{x:Type controls:MarqueePresenter}">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="36" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:MarqueePresenter}">
                    <Grid x:Name="PART_Root"
                          ClipToBounds="True"
                          SnapsToDevicePixels="True"
                          Background="Transparent">
                        <Grid x:Name="PART_CurrentLayer"
                              Opacity="1" />
                        <Grid x:Name="PART_NextLayer"
                              Opacity="0" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
