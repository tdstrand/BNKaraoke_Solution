<Application x:Class="BNKaraoke.DJ.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:BNKaraoke.DJ"
             xmlns:converters="clr-namespace:BNKaraoke.DJ.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:BooleanToStatusConverter x:Key="BooleanToStatusConverter"/>
            <converters:CountToBrushConverter x:Key="CountToBrushConverter"
                                              Threshold="4"
                                              BelowThreshold="#FF808080"
                                              AtOrAboveThreshold="#FFFF0000" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
