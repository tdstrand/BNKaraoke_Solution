{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=BNKaraoke;Username=postgres;"
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:7290"
      }
    },
    "EndpointDefaults": {
      "Protocols": "Http1AndHttp2"
    }
  },
  "AllowedOrigins": [
    "http://localhost:8080",
    "http://localhost:3000",
    "http://172.16.1.221:8080",
    "https://www.bnkaraoke.com",
    "https://bnkaraoke.com"
  ],
  "Spotify": {
    "ClientId": "",
    "ClientSecret": ""
  },
  "YouTube": {
    "ApiKey": ""
  },
  "JwtSettings": {
    "SecretKey": "ThisIsASufficientlyLongSecretKeyForHS256Encryption123456!",
    "Issuer": "BNKaraoke",
    "Audience": "BNKaraokeUsers"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Debug",
        "Microsoft.AspNetCore": "Debug",
        "Microsoft.AspNetCore.Server.Kestrel": "Debug",
        "Microsoft.EntityFrameworkCore": "Debug",
        "Microsoft.EntityFrameworkCore.Database": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "api.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true
        }
      },
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "QueueReorder": {
    "SolverTimeSeconds": 2.0,
    "MaturePolicyDefault": "Defer",
    "PlanTtlSeconds": 600,
    "DefaultMovementCap": 4,
    "ConfirmationThreshold": 8,
    "FrozenHeadCount": 2
  }
}